<div class="container">
	<div class="row">
		<div class="col-12">
			<%= link_to "<i class='fa fa-plus'></i> Agregar administrador".html_safe, new_admin_admin_path, remote: true, class: "btn btn-success" %>
			<br><br>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Email</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @admins.each do |admin| %>
						<tr>
							<td><%= admin.email %></td>
							<td>
								<div class="btn-group">
									<%= link_to "<i class='fa fa-edit'></i> Editar".html_safe, edit_admin_admin_path(admin), class: "btn btn-info", remote: true %>
									<% if @admins.size > 1 %>
									<%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe, admin_admin_path(admin), class: "btn btn-info", method: :delete, data: { confirm: "Esta seguro de eliminar?" } %>
									<% end %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div id="modal-admin"></div>