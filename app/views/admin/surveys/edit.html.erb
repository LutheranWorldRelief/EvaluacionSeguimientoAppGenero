<div class="container">
	<div class="row">
		<div class="col-md-2">
			<%= link_to raw('<i class="fas fa-arrow-circle-left"></i>&nbsp;Regresar'), admin_surveys_path, class: "btn btn-secondary", title:"Regresar a todas las encuestas" %>
		</div>
		<div class="col-md-8">
			<h4 class="text-center"><b><i class="fas fa-clipboard-list"></i></b>&nbsp;Editar encuesta<br><br><b><%= @surveys.name %></b></h4>
		</div>
		<div class="col-12 text-center">
			<br>
			<%= link_to raw('<i class="fas fa-list"></i>&nbsp;&nbsp;Secciones y Preguntas'), admin_survey_path(id: params[:id]), class: "btn btn-danger white-color", title:"Ver todas las secciones y preguntas de esta encuesta" %>
		</div>
	</div>
	<br>
	<%= simple_form_for [:admin, @surveys] do |f| %>
		<br>
		<%= render partial: "admin/surveys/partials/form", locals: { f: f } %>
		<div class="text-center">
			<%= f.submit ("Guardar encuesta") , class: "btn btn-primary", title: "Guardar datos" %>
    	<%= link_to raw('<i class="fas fa-arrow-circle-left"></i>&nbsp;Regresar'), admin_surveys_path, class: "btn btn-secondary", title:"Regresar a todas las encuestas" %>
		</div>
		<br>
	<% end %>
</div>