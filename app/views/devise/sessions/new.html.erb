<!-- Header container -->
<%= render "home/partials/navbar"%>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-4 offset-md-4 text-center bg-skin">
      <br><br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label><b>Correo electrónico:</b></label>
          <%= f.input :email, required: false, autofocus: true, label: false, input_html: { autocomplete: "email", class: "col-12 col-md-10 offset-md-1 form-control text-center" }, placeholder: "Escribir correo electrónico" %>
        </div>
        <div class="form-group">
          <%= f.input :password, label: false, input_html: { value: "123456789", type: "hidden"} %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, 'Ingresar'.html_safe, class: "btn btn-primary text-center" %>
          <br><br><br>
          <p class="text-center">¿No estás registrado?</p>
          <%= link_to raw('<i class="fas fa-user-plus"></i>&nbsp;Registrarse ahora'), new_user_registration_path, class: "btn btn-secondary", title:"Registrarse ahora" %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
<br><br><br><br>