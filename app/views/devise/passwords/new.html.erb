<div class="container">
  <div class="col-md-4 offset-md-4">
    <%= image_tag("lwr-logotag.png", alt:"Lutheran World Relief", class:"img-fluid") %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center bg-skin">
      <br>
      <h4>¿Olvidaste tu contraseña?</h4>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <label><b>Correo electrónico:</b></label>
        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", class: "form-control col-12 col-md-10 offset-md-1 text-center"}, placeholder: "Escribir correo electrónico" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Enviar reinicio de contraseña", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
      <br>
    </div>
  </div>
</div>
