<div class="container">
  <div class="col-md-4 offset-md-4">
    <%= image_tag("lwr-logotag.png", alt:"Lutheran World Relief", class:"img-fluid") %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center bg-skin">
      <br>
      <h4 class="text-center">Registrate</h4>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <label><b>Correo electrónico:</b></label>
          <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", class: "col-12 col-md-10 offset-md-1 text-center form-control" }, placeholder: "Escribir correo electrónico" %>
        </div>
        <div class="form-group">
          <label><b>Contraseña:</b></label>
          <%= f.input :password,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "new-password", class: "col-12 col-md-10 offset-md-1 text-center form-control" }, placeholder: "Escribir contraseña" %>
        </div>
        <div class="form-group">
          <label><b>Confirmar contraseña:</b></label>
          <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "new-password", class: "col-12 col-md-10 offset-md-1 text-center form-control" }, placeholder: "Confirmar contraseña" %>
        </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrarme ahora", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <%= render "admins/shared/links" %>
    <br>
  </div>
</div>
