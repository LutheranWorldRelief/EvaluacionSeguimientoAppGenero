<div class="container">
  <div class="col-md-4 offset-md-4">
    <%= image_tag("lwr-logotag.png", alt:"Lutheran World Relief", class:"img-fluid") %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center bg-skin">
      <br>
      <h4 class="text-center">Administrador</h4>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label><b>Correo electrónico:</b></label>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", class: "col-12 col-md-10 offset-md-1 form-control text-center" }, placeholder: "Escribir correo electrónico" %>
        </div>
        <div class="form-group">
          <label><b>Contraseña:</b></label>
          <%= f.input :password,
                      required: false,
                      label: false,
                      input_html: { autocomplete: "current-password", class: "col-12 col-md-10 offset-md-1 form-control text-center" }, placeholder: "Escribir contraseña" %>
        </div>
        <div class="form-group">
          <div class="row">
            <label class="col-12 col-md-4 offset-md-4 text-center padding-none">Recordarme</label>
            <%= f.input :remember_me, label:false, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Iniciar Sesión'.html_safe, class: "btn btn-primary text-center" %>
        </div>
      <% end %>
      <br>
      <%#= render "admins/shared/links" %>
      <br>
    </div>
  </div>
</div>
<br><br>
