<!-- Modal -->
<div class="modal fade" id="profile" tabindex="-1" role="dialog" aria-labelledby="profileLabel" aria-hidden="true" style="margin: 4% 10%">
  <%= simple_form_for @user, url: update_user_home_index_path(id: @user), method: :put do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="profileLabel">Mi Perfil</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.input :name, label: "Nombre completo", input_html: { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :organization_name, label: "Nombre de la organización", input_html: { class: "form-control" } %>
        </div>
        <div class="row">
          
        </div>
        <div class="form-group">
          <label for="user_phone_number">Teléfono</label>
          <%= f.input :zipcode, as: :hidden, label: false, input_html: { class: "form-control" } %>
          <%= f.input :phone_number, label: false, input_html: { class: "form-control text-center" } %>
        </div>
        <div class="form-group">
          <%= f.input :country, label: "País", input_html: { class: "form-control" } %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<script type="text/javascript">
  
  $("#user_phone_number").intlTelInput({
    formatOnInit: true,
    separateDialCode: true,
    utilsScript: "/utils.js"
  });

  $("#user_phone_number").on("countrychange", function(e, countryData) {
    $("#user_zipcode").val($("#user_phone_number").intlTelInput("getSelectedCountryData").dialCode);
  });  
  $("#user_zipcode").val($("#user_phone_number").intlTelInput("getSelectedCountryData").dialCode);

</script>