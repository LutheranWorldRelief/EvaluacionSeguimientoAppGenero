        "info": "P치gina _PAGE_ de _PAGES_",
        "infoEmpty": "No hay registros.",
        "infoFiltered": "(Filtrado de _MAX_ total de registros.)",
        "search": "_INPUT_",
      	"searchPlaceholder": "Buscar...",
        "paginate": {
		      "previous": "Anterior",
		      "next": "Siguiente"
		    }
		  }
  	});
	} );
</script>