<!-- Modal -->
<div class="modal fade" id="profile" tabindex="-1" role="dialog" aria-labelledby="profileLabel" aria-hidden="true" style="margin: 4% 10%">
  <%= simple_form_for @user, url: update_user_home_index_path(id: @user), method: :put do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="profileLabel"><i class="fas fa-user-edit"></i>&nbsp;&nbsp;Mi Perfil</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h6 class="text-left"><b><i class="fas fa-landmark"></i>&nbsp;&nbsp;Datos de la Organización</b></h6>
              <br>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :organization_name,
                            label: "Nombre de la organización:",
                            label_html: { class: 'label-input'},
                            input_html: { class: "form-control" } %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :organization_type,
                            priority: [ "Para ambos géneros" ],
                            collection: [
                              "Para ambos géneros",
                              "Exclusiva para mujeres",
                              "Exclusiva para hombres"
                            ],
                            label: "Tipo de organización:",
                            label_html: { class: 'label-input'},
                            input_html: { class: "select2 form-control col-md-12 text-center"},
                            prompt: "-- Seleccione una opción --",
                            required: "required" %>
                <br>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <h6 class="text-left">
                <b><i class="fas fa-user-alt"></i>&nbsp;&nbsp;Datos del Usuario</b>
              </h6>
              <br>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :name,
                            label: "Nombre completo:",
                            label_html: { class: 'label-input'},
                            input_html: { class: "form-control" } %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :email,
                            label: "Correo electrónico:",
                            label_html: { class: 'label-input'},
                            input_html: { class: "form-control" } %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="user_phone_number" class="label-input">Teléfono:</label>
                <%= f.input :zipcode,
                            as: :hidden,
                            label: false,
                            input_html: { class: "form-control" } %>

                <%= f.input :phone_number,
                            label: false,
                            input_html: { class: "form-control text-center" } %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :country,
                            label: "País:",
                            label_html: { class: 'label-input'},
                            input_html: { class: "form-control" } %>
              </div>
            </div>        
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<script type="text/javascript">
  
  $("#user_phone_number").intlTelInput({
    formatOnInit: true,
    separateDialCode: true,
    utilsScript: "/utils.js"
  });

  $("#user_phone_number").on("countrychange", function(e, countryData) {
    $("#user_zipcode").val($("#user_phone_number").intlTelInput("getSelectedCountryData").dialCode);
  });  
  $("#user_zipcode").val($("#user_phone_number").intlTelInput("getSelectedCountryData").dialCode);

</script>